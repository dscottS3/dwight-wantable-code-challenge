!!!
%html
  %head
    %title CodeChallenge

    = csrf_meta_tags
    = csp_meta_tag
    = tag "meta", "http-equiv" => "Accept-CH", content: "DPR, Viewport-Width, Width"
    = tag 'meta', {"http-equiv" => "Accept-CH", content: "width=device-width, initial-scale=1.0, user-scalable=no", name: "viewport", id: "vp"}, true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        .navbar-header
          =link_to root_path, class: "navbar-brand" do
            =image_tag "logo"

        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li{class: current_page?(controller: "orders") ? 'active' : ''}
              =link_to orders_path do
                Orders

            - active = controller_name == 'reports' ? 'active' : ''
            %li{class: "dropdown #{active}"}
              = link_to '#', class: "#{active} dropdown-toggle", data: { toggle: :dropdown } do
                Reports
                %span.caret
              %ul.dropdown-menu
                %li= link_to 'Sales', sales_reports_path
                %li= link_to 'Coupons', coupons_reports_path

    .container-fluid{role: "main"}
      .row
        .col-md-12
          - if flash[:notice]
            .alert.alert-info
              %strong Notice:
              = flash[:notice]
          = yield
